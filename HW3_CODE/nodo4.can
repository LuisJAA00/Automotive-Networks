on message Control_Lights
{
  if(this.Light_control_signal==1 || this.Light_control_signal==3)
  {
    LN4.Light_state_n4 =0x01;
    output(LN4);
  }
  else
  {
    LN4.Light_state_n4=0x00;
        output(LN4);
  }
  
}